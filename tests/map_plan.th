    survey xtp
      centreline
      walls off
      data normal from to bearing clino length up down left right
      units bearing clino degrees
      #flags surface
      0 0.1   90  -20:30 0 1 2 3 4
     0.1 0.2  - down  10 5 6 .7 .8
      data normal from to bearing clino length up down left right
      0.2 0.3 90  -20.5   6 [1.1 1.2] [1.3 1.4] [1.5 1.6] [1.7 1.8]
      data normal from to bearing clino length
      0.3 0.4  -   up   5
      units clino percent
      0.4 0.5 0 100 10
      0.5 0.6 0 0   10
      0.6 0.7 0 -100 10
      0.7 0.8 - down 10
      mark 0.6 0.8 painted
      mark 0.7 fixed
    endcentreline
    endsurvey
    
  
    centerline
      equate 0 0@xtp
      equate 0 x0x
    endcenterline
    
    
    centerline -station-names x x
      data cartesian from to dx dy dz
      0 1 5 5 0
      1 2 0 5 0
      2 3 5 0 0
      3 4 5 0 5
      4 5 6 6 -5
    endcenterline
    
    input map_plan.th2
    
